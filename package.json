{
  "name": "bootstrap-starter-kit",
  "version": "1.0.0",
  "description": "Bootstrap 5, SASS and purgecss",
  "main": "dist/index.html",
  "scripts": {
    "css-build": "node-sass --output-style compressed --watch scss/main.scss dist/css/main.min.css",
    "css-watch": "npm run css-build -- --watch",
    "dev": "npm run css-watch",
    "build": "purgecss --config ./purgecss.config.js"
  },
  "keywords": [
    "Bootstrap",
    "scss",
    "sass",
    "purgecss"
  ],
  "author": "Pierre Bourgeois",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.1.3",
    "node-sass": "^7.0.1",
    "purgecss": "^4.1.3",
    "sass": "^1.45.2"
  }
}
